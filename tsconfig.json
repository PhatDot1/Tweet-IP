{
    "compilerOptions": {
      "target": "es2020",
      "module": "commonjs",
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "noImplicitAny": false,
      "skipLibCheck": true,
      "resolveJsonModule": true
    },
    "include": [
      "hardhat.config.js",   
      "scripts/**/*.ts",    
      "typechain-types/**/*"  
    ]
  }
  